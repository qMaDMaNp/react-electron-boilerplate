{
  "name": "react-electron-boilerplate",
  "version": "0.0.1",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "PORT=3006 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "npx concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3006 && electronmon .\"",
    "electron:start": "electron .",
    "electron:serve": "npx electron .",
    "electron:package:mac": "npm run build && electron-builder -m -c.extraMetadata.main=electron/electron.js"
  },
  "build": {
    "appId": "com.supportfleetapp.app",
    "productName": "Support Fleet App",
    "files": [
      "build/**/*",
      "electron/main.js",
      "electron/preload.js"
    ],
    "asar": true,
    "asarUnpack": "node_modules/puppeteer/.local-chromium/**/*",
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "puppeteer": "^19.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "react-scripts": "5.0.1",
    "redux": "^4.2.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@redux-devtools/core": "^3.13.1",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.5",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "electronmon": "^2.0.2",
    "sass": "^1.55.0",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
